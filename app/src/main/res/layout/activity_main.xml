<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etCodigoBarras"
    android:layout_marginTop="3dp"
    android:hint="Código de barras"
    android:textAlignment="center"
    />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etDescripcion"
    android:hint="Descripción"
    android:textAlignment="center"
    android:layout_below="@id/etCodigoBarras"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etMarca"
        android:hint="Marca"
        android:textAlignment="center"
        android:layout_below="@id/etDescripcion"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPrecioCompra"
        android:hint="Precio Compra"
        android:textAlignment="center"
        android:layout_below="@id/etMarca"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPrecioVenta"
        android:hint="Precio Venta"
        android:textAlignment="center"
        android:layout_below="@id/etPrecioCompra"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etExistencias"
        android:hint="Existencias"
        android:textAlignment="center"
        android:layout_below="@id/etPrecioVenta"
        />
    <Button
        android:background="@drawable/bordes_redondos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuscar"
        android:text="Buscar"
        android:textColor="@color/white"
        android:layout_below="@id/etExistencias"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:background="@drawable/bordes_redondos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGuardar"
        android:text="Guardar"
        android:textColor="@color/white"
        android:layout_toLeftOf="@id/btnBuscar"
        android:layout_below="@id/etExistencias"
        />
    <Button
        android:textColor="@color/white"
        android:background="@drawable/bordes_redondos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnActualizar"
        android:text="Actualizar"
        android:layout_toRightOf="@id/btnBuscar"
        android:layout_below="@id/etExistencias"/>
    <Button
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:background="@drawable/bordes_redondos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEliminar"
        android:text="Eliminar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnBuscar"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvProductos"
        android:layout_below="@id/btnEliminar"/>
"
</RelativeLayout>